{
  "name": "my-todos",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "axios": "^0.16.1",
    "body-parser": "^1.17.2",
    "bulma": "^0.4.1",
    "classnames": "^2.2.5",
    "compression": "^1.6.2",
    "cors": "^2.8.3",
    "express": "^4.15.3",
    "font-awesome": "^4.7.0",
    "mongoose": "^4.10.0",
    "morgan": "^1.8.1",
    "normalizr": "^3.2.3",
    "prop-types": "^15.5.10",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-redux": "^5.0.5",
    "react-router-dom": "^4.1.1",
    "redux": "^3.6.0",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.2.0",
    "styled-components": "^2.0.0-17"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-env": "^1.5.0",
    "babel-register": "^6.24.1",
    "dotenv": "^4.0.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^5.0.3",
    "eslint-plugin-react": "^7.0.1",
    "node-sass-chokidar": "0.0.1",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "react-scripts": "1.0.2"
  },
  "scripts": {
    "start-js": "react-scripts start",
    "dev:client": "npm-run-all -p watch-css start-js",
    "dev:api": "nodemon -w api -w .env --exec node -r dotenv/config -r 'babel-register' api",
    "build:client": "npm run build-css && react-scripts build",
    "build:api": "babel api -s -D -d dist",
    "build": "npm-run-all build:client build:api",
    "start:api": "NODE_ENV=production node -r dotenv/config dist",
    "start": "npm run start:api",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "lint": "eslint src api",
    "build-css": "node-sass-chokidar src -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive"
  }
}
